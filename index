    <script>
    function checkAnswer() {
        var answer = document.getElementById("userAnswer").value.toLowerCase().trim();
        var correctAnswer = "ozanam";
        var secretLetter = "P";

        document.getElementById("result").classList.add("hidden");
        document.getElementById("incorrect-result").classList.add("hidden");

        if (answer === correctAnswer) {
            document.getElementById("result").classList.remove("hidden");
            document.getElementById("letter").innerText = secretLetter;
        } else {
            document.getElementById("incorrect-result").classList.remove("hidden");
        }
    }
    </script>
